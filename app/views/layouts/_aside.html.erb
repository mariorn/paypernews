
<div class="row">
  <div class="fixed-action-btn horizontal click-to-toggle" style="top: 5px; right: 24px;">
    <a class="btn-floating btn-large red">
      <i class="large mdi-navigation-menu"></i>
    </a>
    <ul>
      <li>
        <a class="btn-floating yellow darken-1">
          <i class="material-icons">build</i>
        </a>
      </li>
      <li>
        <a class="btn-floating green" href= <%= new_user_article_path(current_user) %>>
          <i class="material-icons">mode_edit</i>
        </a>
      </li>
      <li>
        <a class="btn-floating blue">
          <i class="material-icons">insert_chart</i>
        </a>
      </li>
      <li>
        <a class="btn-floating teal" href= <%= edit_user_path(current_user) %>>
          <i class="material-icons">perm_identity</i>
        </a>
      </li>

      <% if user_signed_in? %>
        <li>
          <a data-method="delete" class="btn-floating black" 
            href= <%= destroy_user_session_path %> >
            <i class="material-icons">power_settings_new</i>
          </a>
        </li>
      <% else %> 
        <li>
          <a class="btn-floating green" href= <%= new_user_registration_path %> >
            <i class="material-icons">power_settings_new</i>
          </a>
        </li>
        <li>
          <a class="btn-floating purple" href= <%= new_user_session_path %> >
            <i class="material-icons">power_settings_new</i>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

   <div class="col s12">
      <div class="card blue-grey lighten-4">
         <div class="card-content">
            <%= link_to 'New Article', new_user_article_path(current_user), class: "waves-effect waves-light btn" %>
         </div>
      </div>
   </div>
   <div class="col s12">
      <div class="card blue-grey lighten-4">
         <div class="card-content">
            <%= link_to("Articles", articles_path, class: "waves-effect waves-light btn") %> 
         </div>
      </div>
   </div>
   <div class="col s12">
      <div class="card blue-grey lighten-4">
         <div class="card-content">
            <%= link_to("Users", users_path, class: "waves-effect waves-light btn") %>
         </div>
      </div>
   </div>
   <div class="col s12">
      <div class="card blue-grey lighten-4">
         <div class="card-content">
            <%= link_to("Create User", new_user_path, class: "waves-effect waves-light btn") %> 
         </div>
      </div>
   </div>
</div>
