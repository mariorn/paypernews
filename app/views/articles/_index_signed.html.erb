
<div class="row">
  <div class="col s9">
    <div class="row">
      <% @articles.each do |article| %>

      <div class="col s6">
        <div class="card">
          <div class="card-content">
            <span class="my-card-title card-title"><%= article.title %></span>
            <p class="my-card-lead"><%= article.lead %></p>
          </div>
          <div class="card-writer">

            <% if article.tag_list.length > 0 %>
              <p>
                #<%= raw article.tag_list.map { |t| link_to t, tag_path(t)}.join(' #') %>
              </p>
            <% end %>

            <div class="chip">
              <img src= <%= User.find(article.user_id).avatar.url %> alt="Contact Person">
              <%= User.find(article.user_id).name %>
              <%= article.created_at.strftime("- %d/%m/%Y - %T") %>
            </div>

          </div>
          <div class="card-action">
            <% if article.access?(current_user) %>
              <%= link_to("LEER", article_path(article)) %>
            <% else %>
              <%= form_tag article_charges_path(article), :class => "form-pay-article" do %>
                <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
                        data-key = <%= Rails.configuration.stripe[:publishable_key] %>
                        data-description = "An article subscription"
                        data-amount = <%= article.price %> >
                </script>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col s3">
    <%= render "layouts/aside" %>
  </div>
</div>
