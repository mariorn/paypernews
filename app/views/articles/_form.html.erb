<div class="row">
  <div class="col s6 offset-s2">

    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@article.errors.count, "error") %> prohibited this news from being saved:</h2>

        <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <%= form_for [@user, @article] do |f| %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :lead %><br>
        <%= f.text_area :lead %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </div>
      <div class="field">
        <%= f.label :price %><br>
        <%= f.text_field :price %>
      </div>


      <div class="field">
        <%= f.label :category %><br>
        <div class="input-field col s12">
          <select class="browser-default">
            <option id="select-form" value="">Category</option>

            <% Category.all.each_with_index do |cat, index| %>
              <option value= <%= cat.name %> ><%= cat.name %></option>
            <% end %>

          </select>
          <br>
        </div>
      </div>
      
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  <br>
  <%= link_to("Back", articles_path) %>

  </div>
</div>