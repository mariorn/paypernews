
<div class="row">
  <% @articles.each do |article| %>

    <div class="col s4">
      <div class="card">
        <div class="card-content">
          <span class="my-card-title card-title"><%= article.title %></span>
          <p class="my-card-lead"><%= article.lead %></p>
        </div>
        <div class="card-writer">

          <% if article.tag_list.length > 0 %>
            <p>
              #<%= raw article.tag_list.map { |t| link_to t, tag_path(t)}.join(' #') %>
            </p>
          <% end %>

          <div class="chip">
            <img src= <%= User.find(article.user_id).avatar.url %> alt="Contact Person">
            <%= User.find(article.user_id).name %>
            <%= article.created_at.strftime("- %d/%m/%Y - %T") %>
          </div>

        </div>
        <div class="card-action">
          <% if article.access?(current_user) %>
            <%= link_to("LEER", article_path(article)) %>
          <% else %>
            <%= link_to("LEER", new_user_session_path) %> 
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <%= will_paginate @articles, previous_label: "Anteriores", next_label: "Posteriores", inner_window: 2, outer_window: 0, :class => "flickr_pagination" %>


