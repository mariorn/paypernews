
  <div class="row">
    <div class="col s9">
      <h4 class="center-align"> <%= @article.title %></h4>
      <h6> <%= @article.lead %></h6>

      <% if @article.photo1? %>
        <img src= <%= @article.photo1.url %> height="100%" width="100%">
      <% end %>

      <p>
        <%= @article.body %>
      </p>

      <% if @article.photo2? %>
        <img src= <%= @article.photo2.url %> height="100%" width="100%">
      <% end %>


      <div class="row buttons-article">
        <div class="col s4">
          <a class="waves-effect waves-light btn" href= <%= articles_path %> >Volver</a>
        </div>
        <div class="col s4">
          <a onclick="Materialize.toast('Me gusta!', 4000)" id="like-button"
            class="waves-effect waves-light btn" js-data-article=<%= @article.id %> >
            <i class="material-icons left">thumb_up</i>
            Me gusta
          </a>
        </div>
        <div class="col s4">
          <a onclick="Materialize.toast('No me gusta!', 4000)" id="no-like-button"
            class="waves-effect waves-light btn" js-data-article=<%= @article.id %> >
            <i class="material-icons left">thumb_down</i>
            No me gusta
          </a>
        </div>
      </div>



    </div>

    <div class="col s3">
      <%= render "layouts/aside" %>
    </div>
  </div>
